<%= simple_form_for(flat) do |f| %>

<div class="form-row d-flex justify-content-around">
  <div class="col-4">
    <%= f.input :title, :label => "Nom du logement"%>
    <%= f.input :address, :label => "Adresse",input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}, class: "mapboxgl-ctrl-geocoder"} %>
    <%= f.input :city,  :label => "Ville" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="col-4">
    <%= f.input :monthly_price, :label => "Loyer mensuel symbolique", collection: [["50€",50],["100€",100],["200€",200],["300€",300]]%>
    <%= f.input :capacity, :label => "Capacité d'accueil", collection: 1..5%>
    <%= f.input :type_of_flat, :label => "Type de logement", collection: [["Maison","house"],["Appartement","appartement"]]%>
  </div>
</div>
<div class="text-center">
  <%= f.submit  'Etape suivante',class: "btn btn-primary"%>
</div>
<% end %>
