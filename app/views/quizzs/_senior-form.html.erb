<ul class="list-unstyled">

  <li class="active">
    <div class="progress mb-3">
      <div class="progress-bar bg-success" role="progressbar" style="width: 5%" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <%= f.input :motivation, as: :string, :motivation => "Pour quelles raison cherchez-vous un locataire ?", as: :radio_buttons, collection: [["J'ai besoin d'un complément de revenu","A"],["Je serai heureux d'avoir de la compagnie et la présence de quelqu'un me rassure.","B"],["Je n'aime pas du tout être seul","C"]["J'ai besoin d'aide au quotidien(faire le ménage, les courses..)","D"]], input_html: { class: "toggle" } %>
    <div class="text-center">
      <button type="button" class="btn btn-primary text-white p-3" data-action="click->quizz-wizzard#next">Suivant </button>
    </div>
  </li>

  <li class="d-none">
    <div class="progress mb-3">
      <div class="progress-bar btn-success" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <%= f.input :gender, :gender => "Préférez-vous que le locataire soit :", as: :radio_buttons, collection: [['Un homme','A'], ['Une femme','B'], ["Aucune importance, du moment que l'on s'entend bien",'C']], input_html: { class: "toggle" }%>
      <div class="d-flex justify-content-center">
        <div class="text-center" data-quizz-wizzard-target="previous">
          <button type="button" class="btn btn-primary text-white p-3 me-3" data-action="click->quizz-wizzard#previous">Précédent </button>
        </div>
        <div class="text-center">
          <button type="button" class="btn btn-primary text-white p-3 ms-3" data-action="click->quizz-wizzard#next">Suivant </button>
        </div>
      </div>
  </li>

