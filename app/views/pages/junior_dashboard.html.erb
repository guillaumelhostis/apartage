<div class="container-xxl d-flex justify-content-around", data-controller="junior-dashboard">
  <div class="col-6 mt-4">
    <div class="mb-3">
      <h1>Bonjour <%= @user.first_name %> 👋🏼</h1>
    </div>
    <div class="dashboard-space mb-2">

      <h2>Chercher un logement</h2>


        <div class="dashboard-geocoder">
              <div class="">
                <%= form_with url: pages_junior_dashboard_path, method: :get, class: "d-flex" do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    id: "form-homepage",
                    placeholder: "Trouver un logement chez un senior"
                  %>
                <%= submit_tag "Rechercher", name: "", class: "btn btn-primary ms-2" %>
                <% end %>
              </div>
        </div>

    </div>
    <div class="dashboard-space">
      <div class="edit-button">
        <%= image_tag "edit"%>
      </div>
      <div class="", data-junior-dashboard-target="map">
        <h2>Notre algorithme a trouvé <strong><%= @flats.length %></strong> appartements </h2>

        <div style="width: 100%; height: 300px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>

    </div>

  </div>
  <div class="dashboard-space col-5 mt-5">
    <div>
      <h2>Mes demandes en attentes</h2>
    </div>
  </div>

</div>
