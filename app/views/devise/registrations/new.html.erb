<div class="container text-center mt-3 mb-3">
  <div>
    <h1>Apart'Agé</h1>
  </div>
  <div class="mt-4">
    <div class=""><h2>Je crée mon compte</h2></div>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">
      <div class="focus-space">
        <%= simple_form_for(resource,   as: resource_name, url: registration_path(resource_name), ) do |f| %>
        <div class="form-row d-flex justify-content-between">
          <%= f.error_notification %>
          <div class="col-4">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>

            <%= f.input :first_name,
                        :label => "Prénom",
                        required: true,
                        autofocus: true%>
            <%= f.input :last_name,
                        :label => "Nom",
                        required: true,
                        autofocus: true%>
          </div>
          <div class="col-4">
              <%= f.input :password,
                          :label => "Mot de passe",
                          required: true,
                          hint: ("#{@minimum_password_length} lettres minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          :label => "Confirmation de mot de passe",
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
              <div class="form-actions text-center mb-3 mt-2">
                <%= f.submit "Créer mon compte", class: "btn btn-primary" %>
              </div>
              <div class="text-center">
                <%= render "devise/shared/links" %>
              </div>
          </div>
        </div>


        <% end %>

      </div>
    </div>
  </div>
</div>
