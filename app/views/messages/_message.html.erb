<div id="message-<%= message.id %>">
  <p class="mb-1 date-sent"><i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i></p>
  <div class="styling-msg">
    <div>
      <% if message.user.image.attached? %>
          <%= image_tag(message.user.image, class: "avatar-chat")%>
      <% else %>
        <%= image_tag "https://static.vecteezy.com/ti/gratis-vector/p3/7319933-black-avatar-person-icons-user-profile-icon-vector.jpg", class: "avatar-chat"%>
      <% end %>
    </div>
    <div class="msg-body">
      <p class="m-0 user-name-msg"><strong><%= message.user.first_name %></strong></p>
      <p class="m-0"><%= message.content %></p>
    </div>

  </div>
</div>
